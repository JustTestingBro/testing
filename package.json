{
  "name": "prescription-server",
  "version": "1.0.0",
  "description": "TypeScript Express server with MCP integration for prescription generation",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "mcp": "node dist/mcp-server.js",
    "mcp:dev": "tsx src/mcp-server.ts"
  },
  "dependencies": {
    "@google/genai": "^0.8.0",
    "@huggingface/inference": "^4.0.6",
    "@modelcontextprotocol/sdk": "^1.10.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mongoose": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "bin": {
    "prescription-mcp": "./dist/mcp-server.js"
  }
}
